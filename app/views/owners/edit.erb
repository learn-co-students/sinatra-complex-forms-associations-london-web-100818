<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>/edit" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  
  <br>
  
  <input type="text" name="owner[name]" value="<%= @owner.name %>">
  
  <br>

  <label>Existing Pets:</label>

  <br>
  
  <% @pets.each do |pet| %>
    <% if @owner.pet_ids.include?(pet.id) %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>" checked />
      <label for="<%= pet.id %>"><%= pet.name %></label>
    <% else %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>" />
      <label for="<%= pet.id %>"><%= pet.name %></label>
    <% end %>
  <% end %>

  <br>

  <label for="add_pet">Add a Pet:</label>

  <br>

  <input type="text" name="pet[name]" id="add_pet" />

  <input type="submit" value="Update Owner" />
</form>
